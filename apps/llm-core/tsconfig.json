{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "src/**/*.ts",
        "generated/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}