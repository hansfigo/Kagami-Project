{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}