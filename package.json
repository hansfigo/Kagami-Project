{
  "name": "kagami-project",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:images": "turbo run build:image",
    "build:telegram-bot": "turbo run build:image --filter=telegram-bot",
    "build:llm-core": "turbo run build:image --filter=llm-core",
    "build:telegram-bot:direct": "docker buildx build --platform linux/arm64 -t ghcr.io/hansfigo/kagami-telegram-bot:latest -f apps/telegram-bot/Dockerfile . --push",
    "build:llm-core:direct": "docker buildx build --platform linux/arm64 -t ghcr.io/hansfigo/kagami-llm-core:latest -f apps/llm-core/Dockerfile . --push",
    "docker:build:telegram": "docker build -f apps/telegram-bot/Dockerfile -t kagami-telegram-bot:local .",
    "docker:build:llm": "docker build -f apps/llm-core/Dockerfile -t kagami-llm-core:local .",
    "docker:build:llm-core:prod": "sudo docker buildx build -t hansfigo/kagami-api:latest -f apps/llm-core/Dockerfile . --push",
    "build:llm-core:package": "npx turbo build --filter=@kagami/llm-core"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}